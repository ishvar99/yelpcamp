<%include ../partials/header.ejs%>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Yelp Camp</p>
			<ul class="list-group">
  <li class="list-group-item active">Info 1</li>
  <li class="list-group-item">Info 2</li>
  <li class="list-group-item">Info 3</li>
</ul>
		</div>
		<div class="col-md-9">
			<div class="card">
  <img class="card-img-top" src="<%=campground.image%>" alt="Error">
  <div class="card-body" >
      <h4 class="float-right">9.99$</h4>
  	<h4 class="card-title" class="display-inline"><a href="#"><%=campground.name%></a></h4>
      <p class="card-text"><%=campground.description%></p>
    <p><em>Submitted By: <strong><%= campground.author.username%></strong></em></p>
    <% if(currentUser && currentUser._id.equals(campground.author.id)){ %>
    <a class ="btn btn-sm btn-warning" href="/campgrounds/<%= campground._id%>/edit">EDIT</a>   
    <form class="display-inline" method="POST" action="/campgrounds/<%= campground._id%>?_method=DELETE">
      <button class="btn btn-sm btn-danger">DELETE</button>
    </form>
    <% }%>
  </div>
		</div>
		<br>
		<div class="card bg-light">
      <div class="card-body">
  <p class="text-right"><a href="/campgrounds/<%=campground._id%>/comments/new" class="btn  btn-success">Add new comment</a></p>
  <%campground.comments.forEach(function(comment) {%>
  <div class="row">
  	<div class="col-md-12">
      <strong><%= comment.author.username%></strong>
  			<span class="float-right">
        </span>
            <p style="margin-bottom: 0.2rem"><%=comment.text%></p>
            <% if(currentUser&&comment.author.id.equals(currentUser.id)) {%>
               <a class ="btn btn-xs btn-warning" href="/campgrounds/<%= campground._id%>/comments/<%=comment._id%>/edit">EDIT</a>   
    <form class="display-inline" method="POST" action="/campgrounds/<%= campground._id%>/comments/<%=comment._id%>?_method=DELETE">
      <button class="btn btn-xs btn-danger">DELETE</button>
    </form>
     <br>
    <%}%>
    <br>
  	</div>
   </div>
<%});%> 
	</div>
  </div>
</div>
</div>
<%include ../partials/footer.ejs%>